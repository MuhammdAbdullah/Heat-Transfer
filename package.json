{
  "name": "heat-transfer-app",
  "version": "1.1.0",
  "description": "Heat Transfer Data Reader - Web App for Android Tablets",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "web": "node server.js",
    "web-dev": "nodemon server.js",
    "build": "electron-builder",
    "build-win": "electron-builder --win",
    "build-all": "electron-builder --win --mac --linux"
  },
  "keywords": [
    "electron",
    "com-port",
    "heat-transfer",
    "serial",
    "web-app",
    "android",
    "pwa"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "electron": "^38.2.2",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.10"
  },
  "dependencies": {
    "express": "^4.21.2",
    "serialport": "^12.0.0",
    "chart.js": "^4.4.4"
  },
  "build": {
    "appId": "com.thermo.heat-transfer-app",
    "productName": "Heat Transfer App",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "renderer.js",
      "index.html",
      "index-web.html",
      "renderer-web.js",
      "server.js",
      "manifest.json",
      "package.json",
      "node_modules/**/*"
    ],
    "npmRebuild": false,
    "nodeGypRebuild": false,
    "buildDependenciesFromSource": false,
    "win": {
      "target": "portable",
      "icon": "icon.ico"
    }
  }
}
